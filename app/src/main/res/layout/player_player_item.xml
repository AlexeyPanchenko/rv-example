<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="20dp">

    <ImageView
        android:id="@+id/player_favorites_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_favorites"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="start|center_vertical"/>

    <ImageView
        android:id="@+id/player_play_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play"
        android:layout_centerInParent="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/player_play_iv"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/player_play_iv"
        android:layout_alignRight="@+id/player_play_iv"
        android:gravity="center"
        android:text="0:00" />

    <ImageView
        android:id="@+id/player_like_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_like"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="end|center_vertical"/>


</RelativeLayout>